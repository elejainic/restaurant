   <div id="masonry-container" >
   	<% @restaurants.each do |restaurant| %>
   	<ul class="thumbnails">
   		<li class="span4">
   			<div class="thumbnail">
   				<%= link_to restaurant.name, restaurant_path(restaurant)%>
   				<%= image_tag restaurant.image_url(:thumb).to_s %>
   				<div class="caption">
   					<h3>Header Name</h3>
   					<p>Description</p>
   					<p align="center"><%= link_to "Open",restaurant_path(restaurant), :class => "btn btn-primary btn-block" %> </p>
   				</div>
   			</div>
   		</li>
   		<% end %>
   	</div>